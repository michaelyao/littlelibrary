doctype html
html
    head
        title Little Library
    body
        h1 This is #{title}


        ul
            each book, i in bookList
                li
                    a(href="#{book.pageUrl}") #{book.Scanned_code}
                    a(href='http://#{book.pageUrl}')
                        img(src='#{book.image_url}')
            else
                li sorry, no books!


